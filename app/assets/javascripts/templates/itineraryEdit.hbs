<div class="row">
  <div class="small-6 columns">
    <div class="panel">
      <h2>{{title}}</h2>
      <p>{{showdown description}}</p>
      {{#link-to 'itineraryEdit' this}}Edit{{/link-to}}
      <hr>
      <h4>Locations</h4>
      <ul class="no-bullet">
        {{#each locations}}
          <li>{{#link-to 'locationEdit' this}}{{name}}{{/link-to}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="small-6 columns">
    {{outlet}}
  </div>
</div>
